<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#7c9b8a">

    <TextView
        android:id="@+id/currentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Current Location"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="44dp"
        android:padding="10dp"
        android:text="Location"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/location"
        android:layout_marginStart="9dp"
        android:layout_marginTop="85dp"
        android:padding="10dp"
        android:text="Address"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/custom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:hint="Custom Check In Name"
        android:background="#5676"
        />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp"
        android:text="Places You've Checked Into"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="#5676"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_title"
        android:layout_alignTop="@+id/button_map"
        android:layout_marginStart="-22dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check In" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/list_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="-22dp"
        android:background="@color/colorPrimaryDark"
        android:text="Map View" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:text="   Auto \nCheck In  "
        android:textColor="#ffffff"
        />

</RelativeLayout>